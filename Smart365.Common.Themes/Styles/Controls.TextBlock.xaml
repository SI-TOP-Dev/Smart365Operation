<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Smart365.Common.Themes.Styles">
    <Style x:Key="title18" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="微软雅黑 Arial"/>
        <Setter Property="Foreground" Value="{DynamicResource lightgreen1BBC9B}"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="title20" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="微软雅黑 Arial"/>
        <Setter Property="Foreground" Value="{DynamicResource lightblue00C0FE}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="txtcontent_textblock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="微软雅黑 Arial"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="30,0,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource fontcolordef}"/>
    </Style>

    <Style x:Key="txt_textblock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="微软雅黑 Arial"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource fontcolordef}"/>
    </Style>

</ResourceDictionary>