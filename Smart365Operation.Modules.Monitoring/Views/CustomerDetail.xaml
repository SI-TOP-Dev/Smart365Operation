                                        <lvc:DefaultTooltip SelectionMode="OnlySender"></lvc:DefaultTooltip>
                                    </lvc:CartesianChart.DataTooltip>
                                </lvc:CartesianChart>
                            </Grid>
                           
                        </materialDesign:Card>

